{
  "name": "@christiangalsterer/mongodb-driver-prometheus-exporter",
  "version": "1.1.0",
  "author": "Christian Galsterer",
  "license": "MIT",
  "description": "Prometheus exporter to monitor the MongoDB Node.js driver",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --forceExit --coverage --verbose",
    "release": "npm run clean && npm run lint-and-fix && npm run build && npm run test",
    "release:major": "npm run release && npm version major",
    "release:minor": "npm run release && npm version minor",
    "release:patch": "npm run release && npm version patch",
    "publish": "npm publish --access=public",
    "publish:dry-run": "npm publish --access=public --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christiangalsterer/mongodb-driver-prometheus-exporter.git"
  },
  "keywords": [
    "prometheus",
    "prometheus metrics",
    "prometheus monitoring",
    "metrics",
    "mongodb",
    "mongodb metrics",
    "mongodb monitoring",
    "monitoring"
  ],
  "dependencies": {
    "mongodb": "^5.7.0",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/jest": "^29.5.3",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=10"
  },
  "bugs": {
    "url": "https://github.com/christiangalsterer/mongodb-driver-prometheus-exporter/issues"
  },
  "homepage": "https://github.com/christiangalsterer/mongodb-driver-prometheus-exporter#readme",
  "directories": {
    "test": "test"
  }
}
